<div class="per-mes-edi">
    <blockquote class="layui-elem-quote">个性化</blockquote>
    <div class="layui-form-item">
        <label class="layui-form-label">更改背景</label>
        <button type="button" class="layui-btn layui-btn-primary" id="per-background">
            <i class="layui-icon">&#xe67c;</i>
        </button>
    </div>
    <div class="per-background-hide layui-form-item">
        <label class="layui-form-label">背景预览</label>
        <img class="per-background" src="" alt="">
    </div>

    <div class="layui-form-item">
        <label class="layui-form-label">更改头像</label>
        <button type="button" class="layui-btn layui-btn-primary" id="per-avatar">
            <i class="layui-icon">&#xe67c;</i>
        </button>
    </div>
    <div class="per-avatar-hide layui-form-item">
        <label class="layui-form-label">头像预览</label>
        <img class="per-avatar" src="" alt="">
    </div>

    <blockquote class="layui-elem-quote">个人信息</blockquote>
    <form class="layui-form" action="/personal/detailEdit" method="post">
        <div class="name layui-form-item">
            <label class="layui-form-label">用户名</label>
            <div class="layui-input-block">
                <input value="<%=toUser.name%>" type="text" name="user[name]" required lay-verify="required" placeholder="用户名" autocomplete="off"
                    class="layui-input">
            </div>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label">性别</label>
            <div class="layui-input-block">
                <%if(toUser.gender==='男'){%>
                    <input type="radio" name="user[gender]" value="男" title="男" checked>
                    <input type="radio" name="user[gender]" value="女" title="女">
                    <%}else{%>
                        <input type="radio" name="user[gender]" value="男" title="男">
                        <input type="radio" name="user[gender]" value="女" title="女" checked>
                        <%}%>

            </div>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label">邮箱</label>
            <div class="layui-input-block">
                <input value="<%=toUser.email%>" type="text" name="user[email]" placeholder="留下联系方式吧~"
                    autocomplete="off" class="layui-input">
            </div>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label">签名</label>
            <div class="layui-input-block">
                <input value="<%=toUser.signature%>" type="text" name="user[signature]" placeholder="心之所向"
                    autocomplete="off" class="layui-input">
            </div>
        </div>
        <div class="layui-form-item layui-form-text">
            <label class="layui-form-label">个人简介</label>
            <div class="layui-input-block">
                <textarea name="user[desc]" placeholder="这个人很懒~" class="layui-textarea"><%if(toUser.desc){%><%=toUser.desc%><%}%></textarea>
            </div>
        </div>
        <div class="layui-form-item">
            <div class="layui-input-block">
                <button class="layui-btn" lay-submit lay-filter="perFormPush">立即更改</button>
                <button type="reset" class="layui-btn layui-btn-primary">重置</button>
            </div>
        </div>
    </form>
</div>