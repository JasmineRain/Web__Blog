<%- include('header')%>
  <%- include('nav') %>
    <link rel="stylesheet" href="/stylesheets/default.css">
    <div class="full"></div>
    <fieldset class="layui-elem-field layui-field-title">
      <legend>搜索结果</legend>
      <hr class="layui-bg-green">
      <% if(locals.articles) { %>
        <div class="result_field">
          <%for(var i=0;i<articles.length;i++){%>
            <%-include('components/search_per_article',{article:articles[i]})%>
          <%}%>
        </div>
      <%}else if(locals.message=="not found"){%>
        <%-include('components/search_not_found')%>
      <%}%>
    </fieldset>
    <%- include('footer') %>
